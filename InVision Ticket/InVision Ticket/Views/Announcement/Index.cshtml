@model IEnumerable<InVision_Ticket.Models.Announcement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            HTML
        </th>
        <th>
