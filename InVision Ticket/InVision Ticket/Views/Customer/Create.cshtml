<script>
	$(function () {
		$('#BusinessCheckBox').change(function () {
			if ($(this).is(':checked')) {
				document.getElementById('BusinessNameLabel').style.display = 'block';
				document.getElementById('BusinessNameEditor').style.display = 'block';
			} else {
				document.getElementById('CustomerName').value = '';
				document.getElementById('BusinessNameLabel').style.display = 'none';
				document.getElementById('BusinessNameEditor').style.display = 'none';
			}
		});
	});
	function load() {
		document.getElementById('CustomerName').value = '';
		document.getElementById('BusinessNameLabel').style.display = 'none';
		document.getElementById('BusinessNameEditor').style.display = 'none';
	}
</script>
