@model InVision_Ticket.ViewModels.UpdateViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>UpdateTicket</title>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>   
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script> 

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src= "@Url.Content("~/Scripts/MarkdownDeepLib.min.js")" type="text/javascript"></script>
    <link href="../../Content/mdd_styles.css" rel="stylesheet" type="text/css" />
</head>
<body>

    
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Update</legend>
    
            @Html.HiddenFor(model => model.LoginID)
            @Html.HiddenFor(model => model.TicketID)
    

            <div class="editor-label">
                @Html.LabelFor(model => model.BilledMinutes)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BilledMinutes)
                @Html.ValidationMessageFor(model => model.BilledMinutes)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.ActualMinutes)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ActualMinutes)
                @Html.ValidationMessageFor(model => model.ActualMinutes)
            </div>


            
            <div class="editor-label">
                @Html.LabelFor(model => model.BillRate)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.BillRateID, new SelectList(Model.BillRateList, "BillRateID", "BillRateDescription"))
                @Html.ValidationMessageFor(model => model.BillRate)
            </div>


            <div class="editor-label">
                @Html.LabelFor(model => model.OtherCharges)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.OtherCharges)
                @Html.ValidationMessageFor(model => model.OtherCharges)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.OtherChargesDescription)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.OtherChargesDescription)
                @Html.ValidationMessageFor(model => model.OtherChargesDescription)
            </div>


            <div class="editor-label">
                @Html.LabelFor(model => model.Comment)
            </div>


            <div class="editor-field">
                <div class="mdd_toolbar" id="comments_toolbar"></div>
                @Html.TextAreaFor(model => model.CommentMarkDown, new { @class = "mdd_editor", @id = "details_textarea" })
		        <div class="mdd_resizer" id="comments_resizer"></div>
                <div class="mdd_preview" id="comment_preview">@Model.Comment</div>
            </div>
                 

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
    
</body>
</html>
<script type="text/javascript">
        $("textarea.mdd_editor").MarkdownDeep({
        help_location: "~/Content/mdd_help.html",

    });
    $("#comments_textarea").css("display", "block");
    $("#comments_resizer").css("display", "block");
    $("#comments_toolbar").css("display", "block");
    $("#details_textarea").css("display", "block");
</script>