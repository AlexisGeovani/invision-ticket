@model IEnumerable<InVision_Ticket.Models.System>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Type
        </th>
        <th>
            Customer
        </th>
        <th>
            Desciption
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desciption)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SystemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SystemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SystemID })
        </td>
    </tr>
}

</table>
