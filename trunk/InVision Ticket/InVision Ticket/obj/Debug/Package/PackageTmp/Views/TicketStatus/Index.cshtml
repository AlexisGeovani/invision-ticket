@model IEnumerable<InVision_Ticket.Models.TicketStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Status
        </th>
        <th>
            Open
        </th>
        <th>
            AttentionRequired
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Open)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttentionRequired)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TicketStatusID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TicketStatusID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TicketStatusID })
        </td>
    </tr>
}

</table>
